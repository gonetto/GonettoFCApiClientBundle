{
    "$schema": "http://json-schema.org/schema#",
    "title": "Match documents",
    "description": "This is a schema that matches documents.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "oid": {
                "type": "string"
            },
            "url": {
                "type": "string"
            },
            "art": {
                "type": "string"
            },
            "angelegt-am": {
                "type": "string",
                "pattern": "^([0-9]{4})-([0-9]{2})-([0-9]{2})T([0-9]{2}):([0-9]{2}):([0-9]{2})$"
            },
            "angelegt-von": {
                "type": "string"
            }
        },
        "required": [
            "oid",
            "url",
            "art",
            "angelegt-am",
            "angelegt-von"
        ]
    }
}
